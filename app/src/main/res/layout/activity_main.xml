<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="come.example.senasoft.prueba1.vista.vista.MainActivity">

    <ImageView

        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/img_logo" />

   <TextView
       android:id="@+id/txv_mensaje"
       android:layout_width="120dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="170dp"
       android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_registrarse"/>
    <TextView
        android:id="@+id/txv_sena_soft"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="360dp"
         android:layout_centerHorizontal="true"
        android:text="@string/txv_sena"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txv_participantes1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:text="@string/txv_participantes"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txv_participantes2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"
        android:text="@string/txv_participantes2"
        android:textStyle="bold"/>
</RelativeLayout>
